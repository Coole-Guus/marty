{
	"name": "bertptrs/marty",
	"description": "Smarty view renderer for the Mako framework",
	"keywords": ["mako", "smarty", "template"],
	"homepage": "http://bertptrs.nl/marty/",
	"license": "MIT",
	"authors": [
		{
			"name": "Bert Peters",
			"email": "bert@bertptrs.nl"
		}
	],
	"require": {
		"php": "^7",
		"smarty/smarty": "^3",
		"mako/framework": "^5.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.12",
		"phpunit/phpunit": "^6.5.12",
		"phpro/grumphp": "^0.14.0",
		"jakub-onderka/php-parallel-lint": "^1.0"

	},
	"autoload": {
		"psr-4": {
			"marty\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"marty\\tests\\": "tests"
		}
	},
	"suggest": {
		"phpunit/phpunit": "Test whether templates actually compile in your unit tests."
	}
}
